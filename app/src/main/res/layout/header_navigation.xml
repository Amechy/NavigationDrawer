<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/background"
    android:orientation="vertical">
    <!--imagen de Perfil-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/perfil_size_width"
        android:layout_height="@dimen/perfil_size_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/perfil"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <!--Nombre de ususario-->
    <TextView
        android:id="@+id/txvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Amechy"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse" />
    <!--Correo de usuario-->
    <TextView
        android:id="@+id/txvUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="alejandromechiengamarra@gmail.com"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse" />

</LinearLayout>